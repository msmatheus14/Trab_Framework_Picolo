<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Guerreiro NEWS</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body class="d-flex flex-column min-vh-100">

    
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/guerreironews">GUERREIRO NEWS</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="/guerreironews">Início</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/guerreironews/todas">Todas as Notícias</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/guerreironews/criarNoticia">Criar Noticia</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    
    <section class="container my-5 flex-grow-1">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="card mb-4 shadow-lg border-0 bg-light">
                    <div class="card-body p-5">
                        <h2 class="card-title display-5 fw-bold text-primary mb-4"><%= ni.titulo %></h2>
                        <p class="card-text text-secondary fs-5 mb-4"><%= ni.descricao %></p>
                        <p class="text-muted mb-3">
                            <strong>Autor:</strong> <%= ni.autor %> <br>
                            <strong>Data de Publicação:</strong> <%= ni.data %> <br>
                            <strong>Categoria:</strong> <%= ni.categoria %>
                        </p>
                        <div class="border-top pt-4">
                            <p class="card-text fs-5 text-dark">
                                <%= ni.conteudo %>
                            </p>
                        </div>
                    </div>
                </div>

                
                <div class="card shadow-lg border-0 bg-light">
                    <div class="card-body p-4">
                        <h3 class="fw-bold text-primary mb-4">Comentários</h3>

                        
                        <div id="comentarios">
                           
                           <% if (comentariosNoticia != null && comentariosNoticia != undefined) { %>
                            <div id="comentarios">
                                <% comentariosNoticia.forEach(comentario => { %>
                                    <div class="mb-3">
                                        <p class="mb-1"><strong><%= comentario.autor %></strong> - <span class="text-muted"><%= comentario.data %></span></p>
                                        <p class="mb-0"><%= comentario.comentario %></p>
                                        <p><form action="/guerreironews/excluircomentario/<%= comentario.id %>" method="POST" class="mt-2">
                                            <button type="submit" class="btn btn-danger btn-sm">Excluir</button>
                                        </form></p>
                                        
                                    </div>
                                <% }) %>
                            </div>
                        <% } %>
                        

                        </div>

                        <form action="/guerreironews/todas/:id" method="POST">
                            <div class="mb-3">
                                <label for="usuario" class="form-label">Seu Nome</label>
                                <input type="text" class="form-control" id="nome" name="nome" placeholder="Digite seu nome" required>
                            </div>
                            <input type="hidden" name="idNoticia" value= <%= ni.id %>>
                            <div class="mb-3">
                                <label for="comentario" class="form-label">Comente aqui Guerreiro!</label>
                                <textarea class="form-control" id="comentario" name="comentario" rows="4" placeholder="Digite seu comentário aqui" required></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary">Enviar Comentário</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

    
    <footer class="bg-dark text-light py-4 mt-auto">
        <div class="container text-center">
            <p>2025 Guerreiro NEWS. Marca Registrada!</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
 