<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Guerreiro NEWS</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>

    
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="#">GUERREIRO NEWS</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="/guerreironews">Início</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/guerreironews/todas">Todas as Notícias</a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" href="/guerreironews/criarNoticia">Criar Noticia</a>
                  </li>
                    
                </ul>
            </div>
        </div>
    </nav>
    <section class="bg-light py-5">
        <div class="container">
            <h1 class="display-4">GuerreiroNews</h1>
            <p class="lead">Notícia com credibilidade!</p>
        </div>
    </section>
    <!-- Seção de Notícias Urgentes -->
    <section class="bg-danger text-white py-4">
        <div class="container">
            <h2 class="display-5">Notícias Urgentes</h2>
            <p class="lead">Fique atento às notícias mais urgentes do momento!</p>
            <div class="row">
                <!-- Exemplo de exibição de notícia urgente -->
                <% array.forEach(function(noticia) { %>
                    <div class="col-md-4 mb-3">
                        <div class="card bg-dark text-white">
                            <div class="card-body">
                                <h5 class="card-title"><%= noticia.titulo %></h5>
                                <p class="card-text"><%= noticia.resumo %></p>
                                <a href="/guerreironews/todas/<%= noticia.id %>" class="btn btn-light">Leia mais</a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </section>

    

    <!-- Seção de Logs -->
    <section class="py-5">
        <div class="container">
            <h2>Últimos Logs</h2>

            <form action='/guerreironews/excluirlogs' method="POST" class="d-inline">
                <button type="submit" class="btn btn-danger btn-sm ms-3">Excluir Todos os Logs</button>
            </form>
            <p></p>
            <ul class="list-group">
                <!-- Exibindo logs -->
                <% logs.forEach(log => { %>
                    <li class="list-group-item">
                        <strong><%= log.tipo %></strong>: <%= log.descricao %> <br>
                        <small>Registrado em: <%= log.data %></small>
                    </li>
                <% }) %>
            </ul>
        </div>
    </section>

    <footer class="bg-dark text-light py-4">
        <div class="container text-center">
            <p>2024 Guerreiro NEWS. Todos os direitos reservados.</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
